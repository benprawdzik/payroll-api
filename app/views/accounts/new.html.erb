<div class="container"
  <%= form_with model: @account, local: true do |form| %>
    <div class="form-group <%= 'has-error' if @account.errors.has_key?(:name) %>">
      <%= form.label :provider, class: "control-label" %>
      <%= form.text_field :provider, class: "form-control" %>

      <% @account.errors.full_messages_for(:name).each do |message| %>
        <p class="help-block"><%= message %></p>
      <% end %>
    </div>

    <div class="form-group <%= 'has-error' if @account.errors.has_key?(:email) %>">
      <%= form.label :username, class: "control-label" %>
      <%= form.text_field :username, class: "form-control" %>

      <% @account.errors.full_messages_for(:email).each do |message| %>
        <p class="help-block"><%= message %></p>
      <% end %>
    </div>

    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  <% end %>
</div>